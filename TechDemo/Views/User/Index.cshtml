@model IEnumerable<TechDemo.Core.Infrastructure.Services.UserVm>
@{
    ViewData["Title"] = "Index";
}

<table class="table table-bordered table-striped table-sm text-center">
    <thead>
         <tr>
             <th>@Html.DisplayNameFor(model => model.Photo)</th>
             <th>@Html.DisplayNameFor(model => model.Name)</th>
             <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
             <th>@Html.DisplayNameFor(model => model.Email)</th>
             <th>@Html.DisplayNameFor(model => model.Password)</th>
             <th>Действия</th>
         </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>
                <img src="~/images/@user.Photo"
                     class="rounded-circle"
                     height="40" width="40"
                     asp-append-version="true" />
            </td>
            <td>@user.Name</td>
            <td>@user.DateOfBirth.ToString("dd-mm-yyyy")</td>
            <td>@user.Email</td>            
            <td>@user.Password</td>
            <td>
                <form asp-action="Delete" method="post" asp-route-id="@user.Id">
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@user.Id">Редактировать</a>
                    <button class="btn btn-sm btn-danger">Удалить</button>
                </form>
            </td>
        </tr>
          }
        </tbody>
</table>

<a class="btn btn-success" asp-action="Create">Создать</a>


