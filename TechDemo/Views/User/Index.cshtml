@model IEnumerable<TechDemo.Core.Infrastructure.Services.UserVm>
@{
    ViewData["Title"] = "Index";
}

@if(Model.Count() == 0)
{
    <h3 class="text-center">Нет пользователей</h3>
}
else
{
    <table class="table table-bordered table-striped table-sm text-center">

        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Photo)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Password)</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                @await Html.PartialAsync("UserItem", user)
            }
        </tbody>
    </table>
}

<a class="btn btn-success" asp-action="Create">Создать</a>


